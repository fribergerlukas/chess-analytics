generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Result {
  WIN
  LOSS
  DRAW
}

model User {
  id        Int      @id @default(autoincrement())
  username  String   @unique
  platform  String   @default("chesscom")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  games     Game[]
  puzzles   Puzzle[]
}

enum Side {
  WHITE
  BLACK
}

enum MoveClassification {
  BEST
  GOOD
  INACCURACY
  MISTAKE
  BLUNDER
}

model Game {
  id              Int        @id @default(autoincrement())
  externalId      String     @unique
  userId          Int
  user            User       @relation(fields: [userId], references: [id])
  endDate         DateTime
  timeControl     String
  result          Result
  pgn             String
  positionsParsed Boolean    @default(false)
  accuracyWhite   Float?
  accuracyBlack   Float?
  createdAt       DateTime   @default(now())
  positions       Position[]
  puzzles         Puzzle[]
}

model Position {
  id         Int      @id @default(autoincrement())
  gameId     Int
  game       Game     @relation(fields: [gameId], references: [id])
  ply        Int
  fen        String
  moveUci    String
  san        String
  sideToMove Side
  eval           Float?
  evalDepth      Int?
  bestMoveUci    String?
  pv             String?
  cpLoss         Float?
  classification MoveClassification?
  createdAt      DateTime @default(now())
  puzzles        Puzzle[]

  @@index([gameId])
}

model Puzzle {
  id            Int      @id @default(autoincrement())
  userId        Int
  user          User     @relation(fields: [userId], references: [id])
  gameId        Int
  game          Game     @relation(fields: [gameId], references: [id])
  positionId    Int
  position      Position @relation(fields: [positionId], references: [id])
  fen           String
  sideToMove    Side
  playedMoveUci String
  bestMoveUci   String
  pv            String
  evalBeforeCp  Int?
  evalAfterCp   Int?
  deltaCp       Int?
  createdAt     DateTime @default(now())

  @@unique([userId, positionId])
}
