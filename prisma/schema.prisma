generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Result {
  WIN
  LOSS
  DRAW
}

model User {
  id           Int      @id @default(autoincrement())
  username     String   @unique
  platform     String   @default("chesscom")
  email        String?  @unique
  passwordHash String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  games        Game[]
  puzzles      Puzzle[]
}

enum Side {
  WHITE
  BLACK
}

enum MoveClassification {
  BEST
  GOOD
  INACCURACY
  MISTAKE
  BLUNDER
}

model Game {
  id              Int        @id @default(autoincrement())
  externalId      String     @unique
  userId          Int
  user            User       @relation(fields: [userId], references: [id])
  endDate         DateTime
  timeControl     String
  rated           Boolean    @default(true)
  result          Result
  pgn             String
  positionsParsed Boolean    @default(false)
  accuracyWhite   Float?
  accuracyBlack   Float?
  createdAt       DateTime   @default(now())
  positions       Position[]
  puzzles         Puzzle[]
}

model Position {
  id         Int      @id @default(autoincrement())
  gameId     Int
  game       Game     @relation(fields: [gameId], references: [id])
  ply        Int
  fen        String
  moveUci    String
  san        String
  sideToMove Side
  eval           Float?
  evalDepth      Int?
  bestMoveUci    String?
  pv             String?
  cpLoss         Float?
  classification MoveClassification?
  createdAt      DateTime @default(now())
  puzzles        Puzzle[]

  @@index([gameId])
  @@index([fen, gameId])
}

model Puzzle {
  id            Int      @id @default(autoincrement())
  userId        Int
  user          User     @relation(fields: [userId], references: [id])
  gameId        Int
  game          Game     @relation(fields: [gameId], references: [id])
  positionId    Int
  position      Position @relation(fields: [positionId], references: [id])
  fen           String
  sideToMove    Side
  playedMoveUci String
  bestMoveUci   String
  pv            String
  pvMoves       String[]  @default([])
  requiredMoves Int       @default(1)
  evalBeforeCp  Int?      // Position eval from white's perspective (= evalAfterBest, since engine assumes optimal play)
  evalAfterCp   Int?      // Eval after the played (wrong) move, from white's perspective
  deltaCp       Int?      // evalAfterCp - evalBeforeCp (negative for white mistakes, positive for black mistakes)
  category      String?   // WHY: resilience | advantage_capitalisation | opportunity_creation | precision_only_move
  severity      String?   // HOW BAD: mistake | blunder | missed_win | missed_save
  labels        String[]  @default([]) // WHAT: tactical motifs (fork, pin, sacrifice, etc.)
  createdAt     DateTime @default(now())

  @@unique([userId, positionId])
}
