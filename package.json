{
  "name": "chess-analytics",
  "version": "1.0.0",
  "description": "Chess analytics backend service",
  "main": "dist/server.js",
  "scripts": {
    "dev": "nodemon --exec ts-node src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "db:migrate": "prisma migrate dev",
    "db:generate": "prisma generate",
    "parse-positions": "ts-node src/jobs/parse-positions.ts",
    "evaluate": "ts-node src/jobs/evaluate-positions.ts",
    "detect-blunders": "ts-node src/jobs/detect-blunders.ts"
  },
  "dependencies": {
    "@prisma/client": "^6.3.0",
    "chess.js": "^1.4.0",
    "express": "^4.21.2",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/express": "^5.0.0",
    "nodemon": "^3.1.9",
    "prisma": "^6.3.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3"
  }
}
