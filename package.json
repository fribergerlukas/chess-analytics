{
  "name": "chess-analytics",
  "version": "1.0.0",
  "description": "Chess analytics backend service",
  "main": "dist/server.js",
  "scripts": {
    "dev": "nodemon --exec ts-node src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "db:migrate": "prisma migrate dev",
    "db:generate": "prisma generate",
    "parse-positions": "ts-node src/jobs/parse-positions.ts",
    "evaluate": "ts-node src/jobs/evaluate-positions.ts",
    "detect-blunders": "ts-node src/jobs/detect-blunders.ts",
    "compute-accuracy": "ts-node src/jobs/compute-accuracy.ts",
    "backfill-puzzles": "ts-node src/jobs/backfill-puzzle-pv.ts",
    "backfill-classification": "ts-node src/jobs/backfill-classification.ts"
  },
  "dependencies": {
    "@prisma/client": "^6.3.0",
    "bcryptjs": "^3.0.3",
    "chess.js": "^1.4.0",
    "cors": "^2.8.6",
    "express": "^4.21.2",
    "jsonwebtoken": "^9.0.3",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "nodemon": "^3.1.9",
    "prisma": "^6.3.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3"
  }
}
